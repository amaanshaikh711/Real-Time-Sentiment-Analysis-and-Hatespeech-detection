/* --- 3D Animated Analyze Button (Enhanced) --- */
.analyze-btn-3d {
  display: inline-flex;
  align-items: center;
  gap: 0.75em;
  padding: 1.1em 2.2em;
  font-size: 1.25rem;
  font-weight: 700;
  color: #fff;
  background: linear-gradient(120deg, #8a2be2 0%, #5f1bbd 50%, #3a86ff 100%);
  background-size: 200% 200%;
  background-position: 0% 50%;
  border: none;
  border-radius: 2.5em;
  box-shadow: 0 8px 24px 0 #8a2be244, 0 2px 8px 0 #0002;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: 
    box-shadow 0.25s cubic-bezier(.4,2,.6,1), 
    transform 0.18s cubic-bezier(.4,2,.6,1), 
    background-position 0.5s cubic-bezier(.4,2,.6,1),
    background 0.5s cubic-bezier(.4,2,.6,1);
  outline: none;
  z-index: 1;
  perspective: 600px;
}
.analyze-btn-3d span {
  position: relative;
  z-index: 2;
  letter-spacing: 0.02em;
  transition: color 0.2s, text-shadow 0.2s;
}
.analyze-btn-3d i {
  font-size: 1.2em;
  margin-left: 0.5em;
  transition: transform 0.3s cubic-bezier(.4,2,.6,1), color 0.2s;
  color: #fff;
  z-index: 2;
}
.analyze-btn-3d::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 2.5em;
  background: linear-gradient(120deg, #fff 0%, #8a2be2 100%);
  opacity: 0;
  transition: opacity 0.3s;
  z-index: 0;
}
.analyze-btn-3d:hover,
.analyze-btn-3d:focus {
  box-shadow: 0 24px 48px 0 #8a2be288, 0 8px 24px 0 #3a86ff44;
  transform: perspective(600px) translateY(-8px) scale(1.06) rotateX(8deg) rotateY(-4deg);
  background-position: 100% 50%;
  background: linear-gradient(120deg, #3a86ff 0%, #8a2be2 60%, #ff4b2b 100%);
}
.analyze-btn-3d:hover::before,
.analyze-btn-3d:focus::before {
  opacity: 0.16;
}
.analyze-btn-3d:hover span,
.analyze-btn-3d:focus span {
  color: #fff;
  text-shadow: 0 2px 12px #8a2be2cc;
}
.analyze-btn-3d:hover i,
.analyze-btn-3d:focus i {
  color: #fff;
  transform: translateX(10px) scale(1.25) rotate(-8deg);
}
.analyze-btn-3d:active {
  box-shadow: 0 2px 8px 0 #8a2be244, 0 1px 4px 0 #0002;
  transform: perspective(600px) translateY(2px) scale(0.97) rotateX(-2deg) rotateY(2deg);
}

