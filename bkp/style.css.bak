a, a:visited, a:active, a:focus, a:hover, button, .btn, .analyze-btn, .sidebar-link {
  text-decoration: none !important;
  outline: none !important;
  box-shadow: none !important;
}
.btn:hover, .analyze-btn:hover, button:hover, .sidebar-link:hover, a:hover {
  text-decoration: none !important;
  outline: none !important;
  box-shadow: none !important;
}
/* =============== CSS VARIABLES =============== */
:root {
  --sidebar-width: 220px;
  --sidebar-collapsed-width: 64px;
  --navbar-height: 60px;
  
  /* Dark mode colors (default) */
  --bg-primary: #1a1a2e;
  --bg-secondary: #12122b;
  --bg-navbar: #111129;
  --text-primary: #e0e0e0;
  --text-secondary: #b39ddb;
  --accent-primary: #8a2be2;
  --accent-secondary: #4A90E2;
  --border-color: rgba(138, 43, 226, 0.18);
  --shadow-color: rgba(138, 43, 226, 0.3);
  --glass-bg: rgba(255, 255, 255, 0.05);
  --hover-bg: rgba(138, 43, 226, 0.1);
}

/* Light mode colors */
/* ---------- Light mode variables (REPLACE existing [data-theme="light"] block) ---------- */
/* Palette:
   Deep Purple    : #4B0082  (primary brand)
   Cool Gray      : #667085  (secondary text / subtle surfaces)
   Clean White    : #FFFFFF  (main background)
   Metallic Silver: #C0C0C0  (accents / borders)
   Charcoal Black : #1F2937  (contrast elements / headings)
*/

[data-theme="light"] {
  --bg-primary: #FFFFFF;                /* page background - clean white */
  --bg-secondary: #F6F7F9;              /* page surfaces (slightly off-white) */
  --bg-navbar: #FFFFFF;                 /* navbar */
  --sidebar-bg: #F3F4F6;                /* sidebar background (light) */
  --footer-bg: #F3F4F6;                 /* footer background (light) */
  --text-primary: #1F2937;              /* main text - charcoal black */
  --text-secondary: #667085;            /* muted text - cool gray */
  --accent-primary: #4B0082;            /* deep purple (brand) */
  --accent-secondary: #A37CF0;          /* lighter purple accent */
  --accent-metal: #C0C0C0;              /* metallic silver */
  --border-color: rgba(192,192,192,0.25);
  --shadow-color: rgba(75,0,130,0.06);  /* very subtle purple shadow */
  --glass-bg: rgba(255,255,255,0.7);
  --hover-bg: rgba(75,0,130,0.06);      /* subtle hover tint */
}
:root[data-theme="light"] {
  --primary-color: #4B0082; /* Deep Purple */
  --secondary-color: #667085; /* Cool Gray */
  --background-color: #FFFFFF; /* White */
  --accent-color: #C0C0C0; /* Metallic Silver */
  --text-color: #1F2937; /* Charcoal Black */
  --card-bg: linear-gradient(135deg, #ffffff, #f5f5f5);
  --sidebar-bg: linear-gradient(135deg, #4B0082, #6a0dad);
  --navbar-bg: linear-gradient(135deg, #4B0082, #a37cf0);
}

/* =============== BASE STYLES =============== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', sans-serif;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  margin: 0;
  padding: 0;
  overflow-x: hidden;
  transition: background-color 0.3s ease, color 0.3s ease;
}

a {
  color: var(--accent-primary);
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  text-decoration: none;
}

/* =============== HEADER =============== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--bg-secondary);
  padding: 10px 20px;
  box-shadow: 0 2px 5px var(--shadow-color);
  position: sticky;
  top: 0;
  z-index: 1000;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.logo {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--accent-primary);
  transition: color 0.3s ease;
}

.centered-logo {
  margin: 0 auto;
}

/* =============== SIDEBAR =============== */
.sidebar {
  position: fixed;
  top: var(--navbar-height);
  left: 0;
  width: var(--sidebar-width);
  height: calc(100% - var(--navbar-height));
  background-color: var(--bg-secondary);
  padding-top: 20px;
  overflow-y: auto;
  box-shadow: 2px 0 5px var(--shadow-color);
  transition: width 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
  z-index: 999;
}

.sidebar.active {
  transform: translateX(0);
}

.sidebar.collapsed {
  width: var(--sidebar-collapsed-width);
}

.sidebar-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-link {
  display: block;
  padding: 12px 20px;
  color: var(--text-secondary);
  font-weight: 600;
  border-left: 4px solid transparent;
  transition: background-color 0.3s, border-color 0.3s, color 0.3s;
}

/* No hover color for sidebar links; keep only scale via HTML classes */
/* Hover removed intentionally */

/* Active state remains highlighted */
.sidebar-link.active {
  background-color: transparent;
  border-left: 4px solid var(--accent-primary);
  color: inherit;
}

/* Force no hover color/background inside sidebar; keep only scale from Tailwind */
#sidebar a:hover,
#sidebar a:focus {
  background: transparent !important;
  color: inherit !important;
  box-shadow: none !important;
}

#sidebar a:hover svg,
#sidebar a:hover i {
  /* do not change icon colors on hover */
  filter: none !important;
}

/* Collapsed sidebar hover: ensure no background tint */
#sidebar.w-16 a:hover {
  background: transparent !important;
}

/* Mobile nav links: no color/bg change on hover */
.mobile-nav a:hover {
  background: transparent !important;
  color: inherit !important;
}

/* Sidebar anchors should not pick global link color */
#sidebar a {
  color: inherit !important;
}
/* =============== MAIN CONTAINER =============== */
.home-container {
  margin-left: var(--sidebar-width);
  padding: 20px;
  padding-top: 80px; /* Add top padding to avoid navbar collision */
  max-width: 1200px;
  transition: margin-left 0.3s ease;
}

/* When sidebar is collapsed */
.sidebar.collapsed ~ .home-container,
#sidebar.w-16 ~ .home-container {
  margin-left: var(--sidebar-collapsed-width);
}

/* Prevent layout shifts when used in other views */
@media (max-width: 768px) {
  .home-container {
    margin-left: 0;
    padding-top: 60px; /* Reduced padding for mobile */
  }
}

.home-main {
  display: flex;
  flex-direction: column;
  gap: 30px;
  padding-top: calc(var(--navbar-height, 60px) + 16px); /* Always clear navbar */
}

/* =============== GLASSMORPHIC CARD =============== */
.glass-card {
  background: var(--glass-bg);
  border-radius: 15px;
  padding: 25px;
  box-shadow: 0 8px 32px 0 var(--shadow-color);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  transition: background-color 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease, color 0.3s ease;
}

/* =============== HOME CONTENT =============== */
.home-content {
  text-align: center;
}

.home-icon {
  font-size: 4rem;
  margin-bottom: 15px;
}

/* =============== BUTTONS =============== */
.btn {
  display: inline-block;
  background-color: var(--accent-primary);
  color: white;
  padding: 12px 25px;
  border-radius: 30px;
  font-weight: 700;
  cursor: pointer;
  transition: box-shadow 0.3s ease, background-color 0.3s ease;
  margin-top: 15px;
  text-decoration: none;
}

.btn-glow:hover {
  box-shadow: 0 0 15px #8a2be2;
}

/* =============== FLASHCARDS SECTION =============== */
.flashcards-section {
  margin-top: 40px;
}

.section-title {
  font-size: 1.8rem;
  margin-bottom: 20px;
  text-align: center;
  color: #d1c4e9;
}

.flashcards-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

  .flashcard {
    background: var(--glass-bg);
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 0 10px var(--shadow-color);
    transition: box-shadow 0.3s ease, background-color 0.3s ease;
    text-align: center;
    cursor: default;
    color: var(--text-secondary);
    font-weight: 700;
    font-size: 1rem;
  }

  .flashcard:hover {
    box-shadow: 0 0 20px var(--accent-primary);
  }

/* =============== HOW IT WORKS =============== */
.how-it-works ol {
