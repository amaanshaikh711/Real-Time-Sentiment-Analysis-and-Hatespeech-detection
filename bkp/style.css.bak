/* =============== YOUTUBE ANALYSIS PAGE STYLES =============== */

/* ===========================
   YouTube Analysis — Modern 3D UI
   Add this at the end of your main css so it overrides earlier rules.
   =========================== */

/* Centering inner wrapper so content stays centered regardless of sidebar width */
.youtube-analysis-container {
  padding: 2rem 1rem;
  padding-top: calc(var(--navbar-height, 72px) + 2rem);
  box-sizing: border-box;
  width: 100%;
}

/* Inner container that will be centered and keeps max width */
.youtube-analysis-inner {
  max-width: 1200px;
  margin: 0 auto;
  display: block;
  transform: translateZ(0);
  -webkit-font-smoothing: antialiased;
}

/* Make sure to add this div around existing page content (if not present, it's fine because selectors below are specific) */
/* Example: <div class="youtube-analysis-container"><div class="youtube-analysis-inner"> ... existing content ... </div></div> */

/* ----- Header polish ----- */
.youtube-header {
  text-align: center;
  margin-bottom: 2.25rem;
}
.gradient-text {
  font-size: 2.6rem;
  letter-spacing: -0.5px;
  line-height: 1.05;
  margin-bottom: 0.35rem;
}
.header-description {
  font-size: 1.05rem;
  max-width: 760px;
  margin: 0.25rem auto 0;
  color: var(--text-secondary);
  opacity: 0.95;
}

/* ----- Analysis form: grid layout with 3D inputs ----- */
.analysis-form-container {
  max-width: 100%;
  margin: 0 auto 2.25rem;
  padding: 1.4rem;
  border-radius: 16px;
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
  border: 1px solid rgba(255,255,255,0.04);
  box-shadow:
    0 6px 18px rgba(10, 10, 25, 0.45),
    inset 0 1px 0 rgba(255,255,255,0.02);
  backdrop-filter: blur(8px);
}

/* Use an inner grid so things can be centered regardless of sidebar offsets */
.youtube-form .form-inputs-row {
  display: grid;
  grid-template-columns: 1fr 220px;
  gap: 1.25rem;
  align-items: end;
}

/* Group for inputs */
.input-group-3d {
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 3D input — layered shadows and subtle inner highlight */
.glassmorphism-input-3d {
  width: 100%;
  border-radius: 14px;
  padding: 0.95rem 1.2rem;
  font-size: 0.98rem;
  color: var(--text-primary);
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border: 1px solid rgba(255,255,255,0.05);
  box-shadow:
    0 18px 30px rgba(11, 12, 30, 0.45),          /* deep soft shadow */
    0 6px 18px rgba(20, 12, 60, 0.25),           /* mid shadow */
    inset 0 1px 0 rgba(255,255,255,0.02);        /* inner sheen */
  transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
  transform: translateZ(0);
  outline: none;
}

/* Floating lift on focus — simulates 3D button press/pop */
.glassmorphism-input-3d:focus {
  transform: translateY(-6px) scale(1.01);
  border-color: rgba(123, 63, 255, 0.9);
  box-shadow:
    0 30px 50px rgba(11, 12, 30, 0.55),
    0 10px 30px rgba(123, 63, 255, 0.08),
    inset 0 1px 0 rgba(255,255,255,0.03);
}

/* Input labels: slightly smaller, more compact */
.input-label {
  font-size: 0.92rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
  font-weight: 600;
  display:flex;
  align-items:center;
  gap:0.5rem;
}

/* Button container: full width row below input grid but aligned to right column */
.form-button-container {
  margin-top: 1rem;
  display: flex;
  justify-content: center;
  grid-column: 1 / -1;
}

/* Big 3D gradient CTA */
.analyze-btn-grad-3d {
  display: inline-flex;
  align-items: center;
  gap: 0.65rem;
  padding: 0.88rem 1.4rem;
  font-size: 1rem;
  font-weight: 700;
  border-radius: 12px;
  color: #fff;
  background: linear-gradient(135deg, var(--accent-primary, #6c3bd6), var(--accent-secondary, #a37cf0));
  border: 1px solid rgba(255,255,255,0.08);
  box-shadow:
    0 18px 36px rgba(36, 11, 75, 0.5),
    0 6px 18px rgba(0,0,0,0.25),
    inset 0 -6px 18px rgba(255,255,255,0.03);
  transform: translateZ(0);
  transition: transform 180ms cubic-bezier(.2,.9,.3,1), box-shadow 180ms;
  cursor: pointer;
}

/* Hover/active states for button */
.analyze-btn-grad-3d:hover {
  transform: translateY(-6px);
  box-shadow:
    0 26px 46px rgba(36, 11, 75, 0.55),
    0 8px 22px rgba(0,0,0,0.28),
    inset 0 -6px 18px rgba(255,255,255,0.04);
}
.analyze-btn-grad-3d:active {
  transform: translateY(-2px) scale(0.998);
}

/* ----- KPIs: neat 3-card row ----- */
.kpi-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.kpi-card {
  border-radius: 14px;
  padding: 1.35rem;
  display:flex;
  gap:1rem;
  align-items:center;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border: 1px solid rgba(255,255,255,0.04);
  box-shadow:
    0 22px 44px rgba(6,6,20,0.45),
    inset 0 1px 0 rgba(255,255,255,0.02);
  transition: transform 160ms ease, box-shadow 160ms ease;
}
.kpi-card:hover { transform: translateY(-8px); box-shadow: 0 36px 70px rgba(6,6,20,0.55); }

.kpi-icon {
  min-width:64px;
  min-height:64px;
  border-radius:12px;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:1.6rem;
  background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.02));
  box-shadow: inset 0 -6px 18px rgba(255,255,255,0.02);
}
.kpi-content h3 { font-size:1.8rem; margin:0; }
.kpi-content p { margin:0; color:var(--text-secondary); font-weight:600; }

/* ----- Charts section: balanced grid ----- */
.charts-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1.5rem;
}
.chart-container {
  border-radius: 14px;
  padding: 1.25rem;
  height: 420px;
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  background: linear-gradient(180deg, rgba(255,255,255,0.015), rgba(255,255,255,0.01));
  border:1px solid rgba(255,255,255,0.03);
  box-shadow: 0 20px 40px rgba(8,8,25,0.45);
}
.chart-title { margin-bottom: 0.7rem; font-weight:700; font-size:1.05rem; text-align:center; }

/* Full width timeline */
.chart-full-width { grid-column: 1 / -1; height: 380px; }

/* ----- Insights grid ----- */
.insights-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 0.9rem;
  margin-bottom: 1.25rem;
}
.insight-card {
  padding: 1rem;
  border-radius: 12px;
  min-height: 92px;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border: 1px solid rgba(255,255,255,0.03);
  box-shadow: 0 12px 26px rgba(6,6,20,0.35);
  transition: transform 150ms ease;
}
.insight-card:hover { transform: translateY(-6px); }

/* ----- Comments list: nicer cards ----- */
.comments-section { margin-top: 1rem; }
.comments-container {
  max-height: 520px;
  overflow-y: auto;
  padding-right: 0.6rem;
  display: grid;
  gap: 0.8rem;
}
.comment-card {
  border-radius: 12px;
  padding: 1rem;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border: 1px solid rgba(255,255,255,0.03);
  box-shadow: 0 10px 26px rgba(11,12,30,0.32);
  transition: transform 130ms ease, box-shadow 130ms ease;
}
.comment-card:hover { transform: translateY(-6px); box-shadow: 0 22px 42px rgba(11,12,30,0.40); }
.comment-card.hate-comment { border-color: rgba(239,68,68,0.38); background: linear-gradient(180deg, rgba(239,68,68,0.03), rgba(255,255,255,0.01)); }

/* small meta */
.comment-header { display:flex; justify-content:space-between; gap:0.5rem; align-items:center; margin-bottom:0.6rem; }
.username { font-weight:700; color:var(--text-primary); }
.comment-date, .comment-likes { color:var(--text-secondary); font-size:0.9rem; }

/* sentiment badges — stronger color pop */
.sentiment-badge { padding:0.25rem 0.6rem; border-radius:10px; font-weight:700; font-size:0.78rem; text-transform:none; }
.sentiment-positive { background: rgba(16,185,129,0.12); color:#10b981; border:1px solid rgba(16,185,129,0.18); }
.sentiment-neutral  { background: rgba(250, 204, 21,0.10); color:#f59e0b; border:1px solid rgba(250,204,21,0.18); }
.sentiment-negative { background: rgba(239,68,68,0.08); color:#ef4444; border:1px solid rgba(239,68,68,0.16); }

.hate-badge { padding:0.25rem 0.6rem; border-radius:10px; font-weight:700; font-size:0.78rem; }
.hate-detected { background: rgba(239,68,68,0.12); color:#ef4444; border:1px solid rgba(239,68,68,0.16); }
.safe-content { background: rgba(16,185,129,0.12); color:#10b981; border:1px solid rgba(16,185,129,0.16); }

/* Show more button styling */
.show-more-container { display:flex; justify-content:center; margin-top:0.6rem; }
#show-more-comments {
  padding: 0.6rem 1.1rem;
  border-radius: 10px;
  background: transparent;
  border: 1px solid rgba(255,255,255,0.06);
  color: var(--text-primary);
  cursor:pointer;
  transition: all 140ms;
}
#show-more-comments:hover { transform: translateY(-4px); box-shadow: 0 14px 30px rgba(10,10,30,0.2); }

/* ----- Responsive behavior ----- */
@media (max-width: 1024px) {
  .youtube-form .form-inputs-row { grid-template-columns: 1fr 160px; }
  .kpi-section { grid-template-columns: repeat(2, 1fr); }
  .chart-container { height: 360px; }
  .comments-container { max-height: 420px; }
}

@media (max-width: 768px) {
  /* stack the form for small screens */
  .youtube-form .form-inputs-row { grid-template-columns: 1fr; gap: 0.85rem; }
  .form-button-container { justify-content: stretch; }
  .analyze-btn-grad-3d { width: 100%; }
  .kpi-section { grid-template-columns: 1fr; }
  .charts-section { grid-template-columns: 1fr; }
  .chart-full-width { height: 300px; }
  .comments-container { max-height: 360px; }
  .gradient-text { font-size: 2.2rem; }
  .header-description { max-width: 100%; padding: 0 0.6rem; }
}

@media (max-width: 480px) {
  .glassmorphism-input-3d { padding: 0.8rem 1rem; font-size: 0.95rem; }
  .chart-container { padding: 1rem; }
  .comment-card { padding: 0.85rem; }
  .kpi-content h3 { font-size: 1.4rem;}
}

